                        <GradientStop Color="#F7F3E414" Offset="0.147" />
                    </RadialGradientBrush>
                </k:KinectTileButton.Background>
            </k:KinectTileButton>
                <Canvas Height="590" HorizontalAlignment="Left" Margin="384,204,0,0" Name="canvas1" Background="#FFC1DB3B" VerticalAlignment="Top" Width="1096">
